<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- MAIN APP THEME -->
    <style name="Theme.MeetPoint" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:statusBarColor">@color/red_dark</item>

        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- VERSION WITH NO ACTION BAR -->
    <style name="Theme.MeetPoint.NoActionBar" parent="Theme.MeetPoint">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
