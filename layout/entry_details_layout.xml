<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ================= TOKEN & NAME ================= -->

        <TextView
            android:id="@+id/tvToken"
            android:text="Token #123"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvName"
            android:text="Visitor Name"
            android:textColor="@color/text_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ================= LIVE PHOTO ================= -->

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera"
            android:background="@drawable/bg_card_round"
            android:layout_marginBottom="16dp"/>

        <!-- ================= TEMPORARY ADDRESS ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="top">

            <ImageView
                android:src="@drawable/ic_location"
                app:tint="@color/red"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tvTempAddress"
                android:text="Temporary Address\nCity - 411001\nPincode - 411001"
                android:textColor="@color/text_white"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ================= PERMANENT ADDRESS ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="top">

            <ImageView
                android:src="@drawable/ic_location"
                app:tint="@color/red"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tvPermAddress"
                android:text="Permanent Address\nCity - 411001\nPincode - 411001"
                android:textColor="@color/text_white"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ================= PHONE ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_call"
                app:tint="@color/red"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tvPhone"
                android:text="+91 9876543210"
                android:textColor="@color/text_white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ================= EMAIL ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_email"
                app:tint="@color/red"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:text="example@gmail.com"
                android:textColor="@color/text_white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ================= GENDER ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_gender"
                app:tint="@color/red"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tvGender"
                android:text="Male"
                android:textColor="@color/text_white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ================= PURPOSE ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_purpose"
                app:tint="@color/red"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tvPurpose"
                android:text="Interview"
                android:textColor="@color/text_white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ================= WHOM TO MEET ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWhomName"
                android:text="Mr. Sharma"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/text_white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvWhomPhone"
                android:text="+91 9988776655"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/text_white"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- ================= VISIT DATETIME ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_clock"
                app:tint="@color/red"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tvVisitDateTime"
                android:text="21 Jan 2026 â€¢ 11:30 AM"
                android:textColor="@color/text_white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ================= DESCRIPTION ================= -->

        <LinearLayout
            style="@style/EditFieldStyle"
            android:orientation="horizontal"
            android:gravity="top">

            <ImageView
                android:src="@drawable/ic_description"
                app:tint="@color/red"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:text="Visitor came for interview."
                android:textColor="@color/text_white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- ================= STATUS ================= -->

        <TextView
            android:id="@+id/tvStatus"
            android:text="STATUS : PENDING"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
