<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    tools:context=".AdminDashboardActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg_header_red">

        <!-- TOP BAR -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/bg_card_round"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/imgProfile"
                android:clickable="true"
                android:focusable="true"
                android:text="Hello, Admin"
                android:textColor="@color/text_white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:contentDescription="Menu"
                android:focusable="true"
                android:src="@drawable/ic_options"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>

        <!-- SEARCH BAR -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Search visitor"
            android:background="@drawable/input_field"
            android:padding="15dp"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_grey"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVisitors"
        android:layout_below="@id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="120dp"
        tools:listitem="@layout/row_visitor_item" />

    <RelativeLayout
        android:id="@+id/addButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/btnAddVisitor"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/bg_button_round"
            android:padding="20dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Add Visitor" />

    </RelativeLayout>

</RelativeLayout>
