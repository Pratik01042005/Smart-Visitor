<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back_white"/>

            <TextView
                android:layout_centerInParent="true"
                android:text="Add Vehicle Details"
                android:textColor="@color/text_white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <!-- VEHICLE NUMBER -->
        <EditText
            android:id="@+id/etVehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_field"
            android:hint="Vehicle Number (MH12AB1234)"
            android:padding="15dp"
            android:textColor="@color/text_white"/>

        <!-- PHOTO PREVIEW -->
        <ImageView
            android:id="@+id/imgVehicle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera"
            android:background="@drawable/input_field"/>

        <!-- CAPTURE BUTTON -->
        <Button
            android:id="@+id/btnCapture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Capture Vehicle Photo"
            android:textColor="@color/text_white"
            android:background="@drawable/bg_button_red"/>

        <!-- SAVE -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:text="Save Vehicle"
            android:textColor="@color/text_white"
            android:background="@drawable/bg_button_green"/>

        <!-- SKIP -->
        <TextView
            android:id="@+id/tvSkip"
            android:layout_marginTop="15dp"
            android:text="Skip vehicle (optional)"
            android:textColor="@color/text_grey"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
